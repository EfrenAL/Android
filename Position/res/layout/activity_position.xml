<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp" >

		<Button
		    android:id="@+id/b_posicion"
			android:layout_width="wrap_content"
		    android:layout_height="wrap_content"		    
		    android:layout_below="@+id/tv_longitud1"
		    android:text="@string/position" />
	    <Button
	        android:id="@+id/b_Show"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/tv_longitud"
	        android:layout_marginLeft="16dp"
	        android:layout_toRightOf="@+id/b_posicion"
	        android:text="@string/show_all" />
	    <Button
	        android:id="@+id/b_borrar"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/tv_longitud"
	        android:layout_marginLeft="16dp"
	        android:layout_toRightOf="@+id/b_Show"
	        android:text="@string/delete_all" />
	    
	   	<ListView
	        android:id="@+id/listView1"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/b_posicion">
	    </ListView>
        
    </RelativeLayout>

	
</LinearLayout>